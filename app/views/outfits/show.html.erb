<%= render 'outfit' %>

<ul>
<% @items.each do |item| %>
	<li> <%= link_to item.title, item_path(item) %> - <%= item.category.title %></li>
<% end %>
</ul>

<p>Add clothing to outfit:</p>

<% @all_user_items.each do |item| %>
   <%= link_to item.title, item_path(item) %> | <%= link_to 'Add to Outfit', {:controller => :item_outfits, :action => :create, :item_id => item.id, :outfit_id => @outfit.id}, :method => :post %><br>
<% end %>

<p>
<%= link_to "Outfits", outfits_path %> | 
<%= link_to "Edit Outfit", edit_outfit_path %> | 
<%= link_to "Delete Outfit", { :controller => :outfits, :action => :destroy} , :method => :delete %> 
